{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "airbnb-typescript",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-import-helpers",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "singleQuote": true,
              "semi": false,
              "trailingComma": "none",
			  "endOfLine": "auto"
            }
        ],
        "import-helpers/order-imports": [
            "warn",
            { // example configuration
                "newlinesBetween": "always",
                "groups": [
                   ["/^react/", "/^next/", "/@next/"],
                    "/module/",
                    "/components/",
                    "/^@shared/",
                    "absolute",
                    ["parent", "sibling", "index"]
                ],
                "alphabetize": { "order": "asc", "ignoreCase": true }
            }
        ]
    }
}
