{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "airbnb-typescript",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "radix": "off",
        "class-methods-use-this":"off",
        "import/prefer-default-export": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/naming-convention": "off",
        "@typescript-eslint/no-unused-vars": ["warn"],
        "no-console":"off",
        "prettier/prettier": [
            "error",
            {
              "singleQuote": true,
              "semi": false,
              "trailingComma": "none",
			  "endOfLine": "auto"
            }
        ]
    }
}